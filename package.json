{
  "name": "node-img-placeholder",
  "version": "4.1.0",
  "description": "run a local image placeholder service",
  "main": "lib/server.js",
  "bin": "bin/www",
  "scripts": {
    "commit": "git-cz",
    "start": "node bin/www",
    "test": "istanbul cover -x *.test.js _mocha -- -R spec ./tests/*.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "keywords": [
    "node local image placeholder service",
    "node image placeholder",
    "image placeholder",
    "image placeholder service",
    "image generator",
    "placeholder",
    "node",
    "local",
    "image",
    "placeholder",
    "service"
  ],
  "engines": {
    "node": ">= 6.9.x"
  },
  "bugs": {
    "url": "https://github.com/ifahrentholz/lips/issues"
  },
  "author": "Ingo Fahrentholz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ifahrentholz/lips"
  },
  "dependencies": {
    "express": "4.16.4",
    "extend": "3.0.2",
    "gm": "1.23.1",
    "morgan": "1.9.1",
    "serve-favicon": "2.5.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "cz-conventional-changelog": "2.1.0",
    "ghooks": "2.0.4",
    "istanbul": "0.4.5",
    "mocha": "6.0.0",
    "semantic-release": "15.13.3",
    "supertest": "3.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "_pre-commit": "npm run test"
    }
  }
}
